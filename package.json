{
  "name": "ts-project-template",
  "version": "0.0.1",
  "description": "ts-project-template",
  "main": "src/index.ts",
  "author": "linkecoding <szher@qq.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "ts-node src/index.ts",
    "lint": "eslint 'src/**/*.{js,ts}'"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*./src/**/*.{js,ts,json,md}": [
      "prettier --write",
      "yarn lint"
    ]
  }
}
